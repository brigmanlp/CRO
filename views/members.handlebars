{{!--HK--}}
<header>
    <h2 class="heading">Admin</h2>
</header>
<div class="row">
   <div class="col-md-6 panel">
        <h3>Existing Users</h3>
        <p>Use the X button next to any member to disable the users login. Click Make Admin to give the user Administrator Permissions.</p>  
        {{#each verifiedUser}}
        <div>
            <p>{{this.name}} {{this.email}}</p><button class="adminBtn" data-id={{this.id}}>Make Admin</button><button class="deleteBtn" data-id={{this.id}}>X</button>
        </div>
        {{/each}}
    </div>
</div>